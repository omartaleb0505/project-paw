  <script>
        const students = [
            {
                lastName: "Ahmed",
                firstName: "Sara",
                sessions: [false, true, false, false, false, true],
                participation: [false, true, false, false, false, false]
            },
            {
                lastName: "Yacine",
                firstName: "Ali",
                sessions: [true, true, true, true, true, true],
                participation: [true, true, true, true, false, false]
            },
            {
                lastName: "Houcine",
                firstName: "Rania",
                sessions: [true, true, false, false, true, true],
                participation: [false, true, false, false, true, false]
            }
        ];

        const defaultConfig = {
            system_title: "Student Attendance System",
            institution_name: "Your School Name"
        };

        function calculateAttendance(student) {
            const absences = student.sessions.filter(s => !s).length;
            const participations = student.participation.filter(p => p).length;
            
            let rowClass = '';
            let message = '';
            
            if (absences < 3) {
                rowClass = 'attendance-green';
                if (participations >= 3) {
                    message = 'Good attendance – Excellent participation';
                } else {
                    message = 'Good attendance – You need to participate more';
                }
            } else if (absences >= 3 && absences <= 4) {
                rowClass = 'attendance-yellow';
                if (participations >= 3) {
                    message = 'Warning – attendance low – Good participation';
                } else {
                    message = 'Warning – attendance low – You need to participate more';
                }
            } else {
                rowClass = 'attendance-red';
                message = 'Excluded – too many absences – You need to participate more';
            }
            
            return { absences, participations, rowClass, message };
        }

        function renderAttendanceTable() {
            const tbody = document.getElementById('attendanceBody');
            tbody.innerHTML = '';
            
            students.forEach((student, index) => {
                const stats = calculateAttendance(student);
                const row = document.createElement('tr');
                row.className = stats.rowClass;
                
                let html = `
                    <td>${student.lastName}</td>
                    <td>${student.firstName}</td>
                `;
                
                for (let i = 0; i < 6; i++) {
                    html += `<td style="cursor: pointer; text-align: center;" onclick="toggleAttendance(${index}, ${i})">${student.sessions[i] ? '<span class="checkmark">✓</span>' : ''}</td>`;
                    html += `<td style="cursor: pointer; text-align: center;" onclick="toggleParticipation(${index}, ${i})">${student.participation[i] ? '<span class="checkmark">✓</span>' : ''}</td>`;
                }
                
                html += `
                    <td><strong>${stats.absences} Abs</strong></td>
                    <td><strong>${stats.participations} Par</strong></td>
                    <td class="message-column">${stats.message}</td>
                `;
                
                row.innerHTML = html;
                tbody.appendChild(row);
            });
        }

        function toggleAttendance(studentIndex, sessionIndex) {
            students[studentIndex].sessions[sessionIndex] = !students[studentIndex].sessions[sessionIndex];
            renderAttendanceTable();
            updateStats();
            renderReports();
        }

        function toggleParticipation(studentIndex, sessionIndex) {
            students[studentIndex].participation[sessionIndex] = !students[studentIndex].participation[sessionIndex];
            renderAttendanceTable();
            updateStats();
            renderReports();
        }

        function renderReports() {
            const tbody = document.getElementById('reportBody');
            tbody.innerHTML = '';
            
            students.forEach(student => {
                const stats = calculateAttendance(student);
                const present = 6 - stats.absences;
                let status = '';
                
                if (stats.absences < 3) {
                    status = 'Good';
                } else if (stats.absences >= 3 && stats.absences <= 4) {
                    status = 'Warning';
                } else {
                    status = 'Excluded';
                }
                
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td>${student.firstName} ${student.lastName}</td>
                    <td>6</td>
                    <td>${present}</td>
                    <td>${stats.absences}</td>
                    <td>${stats.participations}</td>
                    <td><strong>${status}</strong></td>
                `;
                tbody.appendChild(row);
            });
        }

        function updateStats() {
            let good = 0, warning = 0, excluded = 0;
            
            students.forEach(student => {
                const stats = calculateAttendance(student);
                if (stats.absences < 3) good++;
                else if (stats.absences >= 3 && stats.absences <= 4) warning++;
                else excluded++;
            });
            
            document.getElementById('totalStudents').textContent = students.length;
            document.getElementById('goodAttendance').textContent = good;
            document.getElementById('warningStudents').textContent = warning;
            document.getElementById('excludedStudents').textContent = excluded;
        }

        function showPage(pageId) {
            document.querySelectorAll('.page').forEach(page => {
                page.classList.remove('active');
            });
            
            document.querySelectorAll('.nav-link').forEach(link => {
                link.classList.remove('active');
            });
            
            document.getElementById(pageId).classList.add('active');
            event.target.classList.add('active');
            
            if (pageId === 'attendance') {
                renderAttendanceTable();
            } else if (pageId === 'reports') {
                renderReports();
            } else if (pageId === 'home') {
                updateStats();
            }
        }

        function handleSubmit(event) {
            event.preventDefault();
            
            const formData = {
                studentId: document.getElementById('studentId').value,
                lastName: document.getElementById('lastName').value,
                firstName: document.getElementById('firstName').value,
                email: document.getElementById('email').value
            };
            
            const successMsg = document.getElementById('successMessage');
            successMsg.style.display = 'block';
            
            document.getElementById('studentForm').reset();
            
            setTimeout(() => {
                successMsg.style.display = 'none';
            }, 3000);
        }

        function handleLogout() {
            const confirmed = document.createElement('div');
            confirmed.style.cssText = 'position: fixed; top: 50%; left: 50%; transform: translate(-50%, -50%); background: linear-gradient(135deg, #1e293b 0%, #334155 100%); padding: 2rem; border-radius: 15px; box-shadow: 0 20px 60px rgba(0,0,0,0.5); z-index: 1000; border: 1px solid rgba(59, 130, 246, 0.3);';
            confirmed.innerHTML = `
                <h3 style="margin-top: 0; color: #f1f5f9;">Logout successful!</h3>
                <p style="color: #cbd5e1;">You have been logged out of the system.</p>
            `;
            document.body.appendChild(confirmed);
            
            setTimeout(() => {
                confirmed.remove();
            }, 2000);
        }

        async function onConfigChange(config) {
            const systemTitle = config.system_title || defaultConfig.system_title;
            const institutionName = config.institution_name || defaultConfig.institution_name;
            
            document.getElementById('systemTitle').textContent = systemTitle;
            document.getElementById('homeTitle').textContent = `Welcome to ${systemTitle}`;
            document.getElementById('institutionName').textContent = institutionName;
        }

        if (window.elementSdk) {
            window.elementSdk.init({
                defaultConfig: defaultConfig,
                onConfigChange: onConfigChange,
                mapToCapabilities: (config) => ({
                    recolorables: [],
                    borderables: [],
                    fontEditable: undefined,
                    fontSizeable: undefined
                }),
                mapToEditPanelValues: (config) => new Map([
                    ["system_title", config.system_title || defaultConfig.system_title],
                    ["institution_name", config.institution_name || defaultConfig.institution_name]
                ])
            });
        }

        renderAttendanceTable();
        renderReports();
        updateStats();
    </script>
